/* components/item/item.wxss */
@import '/assets/font/iconfont.wxss';
.coupon-item{
    background:#fff;
    margin-top: 20rpx;
    padding: 0 30rpx;
    box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(184, 184, 184, 0.06);
}

.coupon-item-l-1{
    display: flex;
    align-items: center;
    border-bottom:1rpx dotted #ececec;
    position: relative;
    height: 141rpx;
}
.coupon-item-left{
    flex:1;
    overflow:hidden;
}
.coupon-item-line{
    width: 10rpx;
    height: 142rpx;
}
.coupon-item-r-1{
    display:flex;
    align-items:center;
    padding: 20rpx 0;
   
}
.coupon-item-l-1::before{
   width: 24rpx;
   height: 24rpx;
   display: block;
   position: absolute;
   content: '';
   bottom: -12rpx;
   left:-42rpx;
   background: #f3f4f5;
   border-radius: 24rpx;
}
.coupon-item-l-1::after{
    content: '';
    width: 24rpx;
    height: 24rpx;
    display: block;
    position: absolute;
    bottom: -12rpx;
    right:-42rpx;
    background: #f3f4f5;
    border-radius: 24rpx;
 }
.coupon-item-r-1-price{
  font-size: 36rpx;
  color:#ff2b60;
  font-weight: bold;
  min-width:164rpx;  
}
.coupon-item-r-1-price image{
   width: 200rpx;
   height: 200rpx;
}
.coupon-item-r-1-price text{
    font-size: 56rpx;
}
.coupon-item-r-1-desc{
    flex:1;
    font-size:20rpx;
    padding-left:16rpx;
    color:#999;
    overflow:hidden;
    text-overflow:ellipsis;
    word-break:break-all;
    white-space:nowrap;
    
}
.coupon-item-r-1-desc .coupon-item-r-1-desc-useCondition{
    font-size:22rpx;
    display:block;
    height:22rpx;
    line-height:22rpx;
    color:#222;
    overflow:hidden;
    text-overflow:ellipsis;
    word-break:break-all;
    white-space:nowrap;
    margin-bottom: 10rpx;
}
.coupon-item-r-2{
    color:#999;
    font-size:20rpx;
    display:flex;
    align-items:center;
    height:52rpx;
    line-height:52rpx;
}
.coupon-item-r-2 .iconfont{
   font-size: 20rpx;
}
.coupon-item-r-2 text{
    flex:1;
    margin-left:12rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.coupon-item-right{
    font-size:20rpx;
    color:#ff2b60;
    margin-left:20rpx;
    text-align:center;
    
}
.coupon-item-right.disable-share{
    color:#ddd;
}
.coupon-item-right-share{
    font-size:26rpx;
    color:#fff;
    width:120rpx;
    height:46rpx;
    line-height:46rpx;
    background:#ff2b60;
    text-align:center;
    border-radius:80rpx;
    margin-top:8rpx;
}

.coupon-item-right.disable-share  .coupon-item-right-share{
    background:#ddd;
}