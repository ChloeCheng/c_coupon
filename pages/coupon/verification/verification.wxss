page{
  background: #fff;
}
.container{
  padding: 80rpx 40rpx 0 40rpx; 
}
.add-tip{
  display: block;
  color:#000;
  font-size: 60rpx;
  font-weight: 900;
}

.add-input{
  display:block;
  height: 80rpx;
  font-size:32rpx;
  line-height:80rpx;
  color:#222;
  margin:120rpx 0 80rpx 0;
  border-bottom: 1rpx solid #ececec;
}

.add-btn{
  color: #fff;
  background: #fe2b60;
  width: 560rpx;
  height:110rpx;
  line-height: 110rpx;
  font-size: 34rpx;
  margin: 0 auto;
  text-align: center;
  border-radius: 110rpx;
}

.add-btn.disable{
  background: #cecece;
  color:#999;
}