image{ display: block; }
/* -------  搜索栏  -------*/

.u-search-tool {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    padding: 12rpx 30rpx;
    height: 88rpx;
    border-bottom: 1rpx solid #dddddd;
    box-sizing:border-box;
    background:#fff;
}

.u-search-bar {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    height: 64rpx;
    width: 598rpx;
    margin-right: 30rpx;
    background: #e8e8e8;
    border-radius: 10rpx;
}

.u-search-bar .icon {
    padding: 0 16rpx;
}

.u-search-bar input {
    width: 540rpx;
    font-size: 26rpx;
}

.u-search-cancel {
    height: 64rpx;
    line-height: 64rpx;
    font-size: 32rpx;
    color: #999999;
    text-align: center;
    white-space: nowrap
}

.u-search-tool .navigator-hover {
    background-color: rgba(255, 255, 255, 0);
    opacity: 1;
}




